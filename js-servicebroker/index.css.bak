body {
  font-family: system-ui, Arial;
  padding: 20px;
  /* Add padding-top to body to prevent content from being hidden by the fixed toolbar */
  padding-top: 80px;
  /* Add padding-bottom to prevent content from being hidden by the fixed footer */
  padding-bottom: 60px;
}
pre {
  background: #f4f4f4;
  padding: 10px;
  border-radius: 6px;
  overflow: auto;
}
.error {
  color: #b91c1c;
}
.ok {
  color: #064e3b;
}

.toolbar {
  position: fixed; /* Stick to the top */
  top: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  border-bottom: 1px solid #e2e8f0;
  padding: 10px 20px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box; /* Include padding in width calculation */
  z-index: 1000;
}
.toolbar-title {
  font-size: 1.25rem;
  font-weight: 600;
}
.toolbar-actions button {
  margin-left: 10px;
  padding: 8px 16px;
  border: 1px solid #cbd5e1;
  border-radius: 6px;
  background-color: #f8fafc;
  cursor: pointer;
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #f8fafc;
  border-top: 1px solid #e2e8f0;
  padding: 10px 20px;
  text-align: center;
  font-size: 0.875rem;
  color: #64748b;
  box-sizing: border-box;
}